{
  "name": "ivy-process-debug",
  "version": "0.0.1",
  "displayName": "Axon Ivy Process Debug Extension",
  "description": "VS Code Debug extension for Axon Ivy Processes.",
  "publisher": "axonivy",
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Debuggers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/glsp-editor-client"
  },
  "scripts": {
    "prepare": "yarn clean && yarn compile && yarn lint",
    "clean": "rimraf lib",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./lib/test/runTest.js"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "^1.46.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "3.9.2",
    "vscode-test": "^1.5.0",
    "rimraf": "^2.6.1"
  },
  "main": "./lib/extension.js",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ivy-process",
        "extensions": [
          ".mod"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "ivy-process"
      }
    ],
    "debuggers": [
      {
        "type": "process",
        "languages": [
          "ivy-process"
        ],
        "label": "Ivy Process Debug",
        "configurationAttributes": {
          "attach": {},
          "launch": {
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "serverPort": {
                "type": "number",
                "description": "Port of the server to connect to",
                "default": 4711
              },
              "serverHost": {
                "type": "string",
                "description": "Host of the server to connect to",
                "default": "localhost"
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "process",
            "request": "attach",
            "name": "Debug Ivy Process"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Ivy Process Debug: Attach",
            "description": "A new configuration for attach a Ivy Process debugger.",
            "body": {
              "type": "process",
              "request": "attach",
              "name": "Debug Ivy Process"
            }
          }
        ]
      }
    ]
  }
}
