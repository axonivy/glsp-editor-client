{
  "name": "@ivyteam/vscode-integration",
  "version": "0.9.0",
  "description": "An example graphical language used for modeling workflows",
  "displayName": "Workflow GLSP Example",
  "publisher": "Eclipse GLSP",
  "homepage": "https://www.eclipse.org/glsp/",
  "bugs": "https://github.com/eclipse-glsp/glsp/issues",
  "author": {
    "name": "Eclipse GLSP"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-glsp/glsp-vscode-integration.git"
  },
  "contributors": [
    {
      "name": "Tobias Ortmayr",
      "email": "tortmayr@eclipsesource.com",
      "url": "https://www.eclipsesource.com"
    }
  ],
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.54.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "workflow.glspDiagram",
        "displayName": "Workflow Diagram Editor",
        "selector": [
          {
            "filenamePattern": "*.mod"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "workflow.diagram.fit",
        "title": "Fit to Screen",
        "category": "Workflow Diagram",
        "enablement": "glsp-workflow-diagram-focused"
      },
      {
        "command": "workflow.diagram.center",
        "title": "Center selection",
        "category": "Workflow Diagram",
        "enablement": "glsp-workflow-diagram-focused"
      },
      {
        "command": "workflow.diagram.layout",
        "title": "Layout diagram",
        "category": "Workflow Diagram",
        "enablement": "glsp-workflow-diagram-focused"
      }
    ],
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "workflow.diagram.fit",
        "when": "glsp-workflow-diagram-focused"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "workflow.diagram.center",
        "when": "glsp-workflow-diagram-focused"
      },
      {
        "key": "alt+l",
        "mac": "alt+l",
        "command": "workflow.diagram.layout",
        "when": "glsp-workflow-diagram-focused"
      }
    ]
  },
  "activationEvents": [
    "*"
  ],
  "files": [
    "lib",
    "extension",
    "server",
    "webview"
  ],
  "main": "./lib/workflow-extension",
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/node": "^8.0.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.3",
    "@eclipse-glsp/vscode-integration": "0.9.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^9.1.1",
    "@ivyteam/vscode-integration-webview": "0.9.0",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn lint",
    "clean": "rimraf extension/lib extension/pack extension/server",
    "watch": "tsc -w",
    "lint": "eslint -c ./.eslintrc.js --ext .ts ./src",
    "build": "tsc",
    "publish": "vsce publish"
  }
}
