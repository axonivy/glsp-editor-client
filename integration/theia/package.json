{
  "private": true,
  "name": "theia-parent",
  "version": "0.9.0",
  "engines": {
    "yarn": "1.0.x || >=1.2.1",
    "node": ">=12.22.0 <13"
  },
  "scripts": {
    "prepare": "lerna run prepare",
    "watch": "lerna run --parallel watch",
    "build": "yarn install --ignore-scripts && lerna run build",
    "lint": "lerna run lint --",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "publish": "yarn && yarn publish:latest",
    "publish:next": "lerna publish --exact --canary=next --npm-tag=next --yes",
    "update:next": "yarn upgrade -p \"sprotty|@eclipse-glsp/.*|@eclipse-glsp-examples\" --next "
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-no-null": "^1.0.2",
    "ignore-styles": "^5.0.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "**/sprotty": "0.10.0",
    "**/sprotty-theia": "0.10.0"
  },
  "eslintConfig": {
    "root": true
  },
  "workspaces": {
    "packages": [
      "browser-app",
      "extension"
    ]
  }
}
