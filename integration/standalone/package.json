{
  "private": true,
  "name": "@ivyteam/standalone-integration",
  "version": "0.9.3-s26",
  "description": "Standalone browser-app for the Axon Ivy process editor",
  "author": "Axon Ivy AG",
  "homepage": "https://developer.axonivy.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/glsp-editor-client"
  },
  "dependencies": {
    "@ivyteam/process-editor": "^0.9.3-s26",
    "@eclipse-glsp/ide": "next"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@types/uuid": "^8.3.4",
    "@playwright/test": "^1.20.0",
    "circular-dependency-plugin": "^5.2.2",
    "css-loader": "^2.1.0",
    "eslint": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-no-null": "^1.0.2",
    "file-loader": "^6.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.3.0",
    "typescript": "^4.5.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn lint",
    "clean": "rimraf lib app/bundle.js app/bundle.js.map app/css",
    "lint": "eslint -c ./.eslintrc.js --ext .ts,.tsx ./src",
    "build": "yarn install --ignore-scripts && tsc && webpack",
    "watch": "webpack --mode development --watch",
    "webtest": "playwright test --headed --browser=chromium --retries=0",
    "webtest:ci": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=report.xml playwright test --browser=all --reporter=junit"
  }
