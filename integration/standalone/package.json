{
  "private": true,
  "name": "@axonivy/standalone-integration",
  "version": "11.9.0-next",
  "description": "Standalone browser-app for the Axon Ivy process editor",
  "author": "Axon Ivy AG",
  "homepage": "https://developer.axonivy.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/axonivy/glsp-editor-client"
  },
  "dependencies": {
    "@axonivy/process-editor": "11.9.0-next",
    "@eclipse-glsp/client": "rc"
  },
  "devDependencies": {
    "@playwright/test": "1.30.0",
    "@types/uuid": "^9.0.0",
    "circular-dependency-plugin": "^5.2.2",
    "css-loader": "^6.7.1",
    "html-webpack-plugin": "^5.5.0",
    "path-browserify": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^8.3.0",
    "typescript": "^4.9.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn lint",
    "clean": "rimraf lib app/bundle*.js app/bundle*.js.map app/css",
    "lint": "eslint -c ./.eslintrc.js --ext .ts,.tsx ./src",
    "build": "yarn install --ignore-scripts && tsc && webpack",
    "watch": "webpack --config webpack.dev.js --watch",
    "webtest": "playwright test",
    "webtest:ci": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=report.xml playwright test"
  }
}
