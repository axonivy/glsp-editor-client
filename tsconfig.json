{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "paths": {
      "@eclipse-glsp-examples/workflow-webapp": [
        "examples/workflow-webapp/src/*"
      ],
      "@eclipse-glsp/ide": [
        "packages/ide/src/*"
      ]
    }
  },
  "include": [
    "ivy-glsp-client/*/src",
    "ivy-glsp-theia/*/src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
