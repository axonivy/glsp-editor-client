    "snabbdom-to-html": "^7.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn lint",
    "clean": "rimraf lib",
    "build": "yarn build:icons && yarn tsc",
    "build:icons": "fantasticon -c ./icons/.fantasticonrc.json && yarn cp:icons",
    "cp:icons": "yarn cpx icons/dist/*.ts src/ && yarn cpx \"icons/dist/*.{css,ttf}\" css/",
    "lint": "eslint -c ./.eslintrc.js --ext .ts,.tsx ./src",
    "watch": "tsc -w",
    "test:mocha": "mocha --config ../configs/.mocharc.json \"./tests/**/*.spec.?(ts|tsx)\"",
    "test": "export TS_NODE_PROJECT=./tsconfig.mocha.json && yarn test:mocha",
    "test:win": "SET TS_NODE_PROJECT=./tsconfig.mocha.json&& yarn test:mocha",
    "test:ci": "export JUNIT_REPORT_PATH=./report.xml && yarn test --colors --reporter mocha-jenkins-reporter"
  },
  "files": [
    "lib",
    "src",
    "css"
  ],
  "main": "lib/index",
  "types": "lib/index",
