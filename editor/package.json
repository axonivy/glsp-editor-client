    "toastify-js": "1.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^9.0.0",
    "@types/showdown": "^2.0.0",
    "@types/toastify-js": "^1.11.1",
    "chai": "^4.3.4",
    "cpx2": "^2.0.0",
    "fantasticon": "^1.2.3",
    "jsdom": "^18.0.1",
    "mocha": "^9.1.3",
    "mocha-jenkins-reporter": "^0.4.7",
    "reflect-metadata": "^0.2.0",
