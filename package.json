{
  "private": true,
  "name": "parent",
  "version": "0.8.0",
  "engines": {
    "yarn": "1.0.x || >=1.2.1",
    "node": ">=10.19.0 <13"
  },
  "scripts": {
    "prepare": "lerna run prepare && yarn copyClient",
    "watch": "lerna run --parallel watch",
    "build": "yarn install --ignore-scripts && lerna run build && yarn copyClient",
    "lint": "lerna run lint --",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "copyClient": "copyfiles -f ./integration/eclipse/ivy-glsp-eclipse/app/* ./server/diagram",
    "publish": "yarn && yarn publish:latest",
    "publish:next": "lerna publish --exact --canary=next --npm-tag=next --yes",
    "update:next": "yarn upgrade -p \"sprotty|@eclipse-glsp/.*|@eclipse-glsp-examples\" --next ",
    "rebuild:browser": "theia rebuild:browser",
    "start:browser": "yarn rebuild:browser && cd integration/theia/browser-app && yarn start",
    "start:browser:debug": "yarn rebuild:browser && cd integration/theia/browser-app && yarn start:debug --hostname 0.0.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^6.8.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-no-null": "^1.0.2",
    "lerna": "^2.2.0",
    "rimraf": "^2.6.1",
    "typescript": "3.9.2",
    "ts-node": "^8.3.0",
    "ignore-styles": "^5.0.1"
  },
  "resolutions": {
    "**/@theia/application-manager": "1.4.0",
    "**/@theia/application-package": "1.4.0",
    "**/@theia/core": "1.4.0",
    "**/@theia/editor": "1.4.0",
    "**/@theia/filesystem": "1.4.0",
    "**/@theia/languages": "1.4.0",
    "**/@theia/markers": "1.4.0",
    "**/@theia/messages": "1.4.0",
    "**/@theia/monaco": "1.4.0",
    "**/@theia/navigator": "1.4.0",
    "**/@theia/outline-view": "1.4.0",
    "**/@theia/preferences": "1.4.0",
    "**/@theia/process": "1.4.0",
    "**/@theia/terminal": "1.4.0",
    "**/@theia/variable-resolver": "1.4.0",
    "**/@theia/userstorage": "1.4.0",
    "**/@theia/workspace": "1.4.0"
  },
  "workspaces": [
    "editor",
    "integration/theia/ivy-glsp-theia",
    "integration/theia/browser-app",
    "integration/eclipse/ivy-glsp-eclipse",
    "integration/eclipse/ide"
  ]
}
