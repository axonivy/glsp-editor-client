{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Editor",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "yarn ",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Watch Editor",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch",
        "$ts-webpack-watch"
      ]
    },
    {
      "label": "Build VSCode Integration",
      "type": "shell",
      "group": "build",
      "command": "yarn --cwd integration/vscode ",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Watch VSCode Integration",
      "type": "shell",
      "group": "build",
      "command": "yarn --cwd integration/vscode watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch",
        "$ts-webpack-watch"
      ]
    },
    {
      "label": "Link VSCode Integration",
      "type": "shell",
      "group": "build",
      "command": "configs/link-vscode-integration.sh",
      "problemMatcher": []
    },
    {
      "label": "Terminate All Tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": [],
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
