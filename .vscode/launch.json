{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Browser Backend",
      "program": "${workspaceRoot}/integration/theia/browser-app/src-gen/backend/main.js",
      "args": [
        "--port=3000",
        "--no-cluster",
        "--IVY_PROCESS_GLSP=5007",
        "--app-project-path=${workspaceRoot}/integration/theia/browser-app"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/lib/**/*.js",
        "${workspaceRoot}/integration/theia/ivy-glsp-theia/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/src-gen/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "name": "Launch Browser (Firefox) Frontend",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceRoot}/browser-app"
    },
    {
      "name": "Launch Browser (Chrome) Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceRoot}/browser-app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Browser Backend",
      "program": "${workspaceRoot}/integration/theia/browser-app/src-gen/backend/main.js",
      "args": [
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--IVY_PROCESS_GLSP=5007",
        "--DEBUG",
        "--app-project-path=${workspaceRoot}/integration/theia/browser-app"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/lib/**/*.js",
        "${workspaceRoot}/integration/theia/ivy-glsp-theia/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/src-gen/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
  ],
  "compounds": [
    {
      "name": "Backend + Chrome Frontend",
      "configurations": [
        "Start Browser Backend",
        "Launch Browser (Chrome) Frontend"
      ]
    }
  ]
}
