{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/integration/vscode/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/integration/vscode/extension/lib/*.js",
        "${workspaceFolder}/packages/vscode-integration/lib/**/*.js"
      ],
      "sourceMaps": true,
      "env": {
        "GLSP_SERVER_DEBUG": "true",
        "GLSP_SERVER_PORT": "5007"
      },
      "presentation": {
        "group": "VSCode Extension",
        "order": 2
      },
      "preLaunchTask": "Watch VSCode Integration",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start Theia Backend",
      "program": "${workspaceRoot}/integration/theia/browser-app/src-gen/backend/main.js",
      "args": [
        "--port=3000",
        "--no-cluster",
        "--IVY_PROCESS_GLSP=5007",
        "--app-project-path=${workspaceRoot}/integration/theia/browser-app"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/lib/**/*.js",
        "${workspaceRoot}/integration/theia/extension/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/src-gen/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "presentation": {
        "group": "Theia",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Theia Backend",
      "program": "${workspaceRoot}/integration/theia/browser-app/src-gen/backend/main.js",
      "args": [
        "--hostname=0.0.0.0",
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--IVY_PROCESS_GLSP=5007",
        "--DEBUG",
        "--app-project-path=${workspaceRoot}/integration/theia/browser-app"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/lib/**/*.js",
        "${workspaceRoot}/integration/theia/extension/lib/**/*.js",
        "${workspaceRoot}/integration/theia/browser-app/src-gen/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "presentation": {
        "group": "Theia",
        "order": 1
      }
    },
    {
      "name": "Launch Theia (Firefox) Frontend",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "webpack://ivyteam/extension",
          "path": "${workspaceFolder}/integration/theia/extension"
        },
        {
          "url": "webpack://ivyteam/editor",
          "path": "${workspaceFolder}/editor"
        }
      ],
      "presentation": {
        "group": "Theia",
        "order": 1
      },
      "preLaunchTask": "Watch Editor",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "name": "Launch Theia (Chrome) Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "group": "Theia",
        "order": 1
      },
      "preLaunchTask": "Watch Editor",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "args": [
        "--config",
        "${workspaceFolder}/configs/.mocharc.json",
        "${file}"
      ],
      "presentation": {
        "group": "Tests",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run All Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "args": [
        "--config",
        "${workspaceFolder}/configs/.mocharc.json",
        "\"${workspaceFolder}/editor/src/**/*.spec.?(ts|tsx)\""
      ],
      "presentation": {
        "group": "Tests",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Theia Backend + Chrome Frontend",
      "configurations": [
        "Start Theia Backend",
        "Launch Theia (Chrome) Frontend"
      ],
      "presentation": {
        "group": "Theia",
        "order": 0
      }
    },
    {
      "name": "Theia Backend + Firefox Frontend",
      "configurations": [
        "Start Theia Backend",
        "Launch Theia (Firefox) Frontend"
      ],
      "presentation": {
        "group": "Theia",
        "order": 0
      }
    }
  ]
}
